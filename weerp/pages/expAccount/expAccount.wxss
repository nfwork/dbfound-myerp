/* pages/expAccount/expAccount.wxss */
.box button{
  margin: 12rpx 4rpx;
  font-weight: normal;
  width: 90rpx;
}
.title{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  float: left;
  text-align: right;
}
input{
  flex: 1;
  margin-top: 5rpx;
  float: left;
}
select{
  flex: 1;
}
switch{
  margin-top:5rpx;
}

.popup-box{
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(53, 47, 47, 0.3);
  width: 100%;
  height: 100%;
}
.info-center{
  position: fixed;
  z-index: 999;
  background-color: white;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  width: 90%;
  margin-top: 15%;
  margin-left: 5%;
  margin-right: 5%;
}

.info-header{
  text-align: center;
  color: rgb(10, 114, 161);
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom: 2rpx solid #e2e2e2; 
  margin-bottom: 20rpx;
}
.info-footer{
  height: 100rpx;
  text-align: center;
  border-top: 2rpx solid #e2e2e2; 
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
}

.row-info{
  padding: 0 30rpx;
}

.row-info .box{
  height: 84rpx;
}
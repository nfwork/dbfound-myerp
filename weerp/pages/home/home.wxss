/* pages/home/home.wxss */

.home{
  margin: 30rpx;
  padding-bottom: 30rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.menu-title{
  box-sizing: border-box;
  margin: 10rpx 0;
  font-size: 26rpx;
  color: gray;
  padding: 6rpx;
  border-bottom: 1px solid rgb(233, 228, 228);
}

.summary{
  box-sizing: border-box;
  margin: 20rpx 5rpx;
  margin-bottom: 20rpx;
  min-height: 200rpx;
  font-size: 26rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}
.summary :first-child{
  width: 500rpx;
  margin-top: 0rpx;
}
.summary-item{
  box-sizing: border-box;
  margin-top: 30rpx;
  margin-right: 0rpx;
  width: 340rpx;
}

.money-big{
  font-size: 40rpx;
  display: inline;
  color: red;
}

.money-small{
  display: inline;
  font-size: 28rpx;
  color: red;
}

.function{
  box-sizing: border-box;
  font-size: 26rpx;
  width: 710rpx;
  display: flex;
}

.function-item{
  height: 156rpx;
  width: 176rpx;
  text-align: center;
  float: left;
  padding-top: 30rpx;
}

.function-item-hover{
  background-color: #efefef;
}

.function-item image{
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto;
  border-radius: 45rpx;
}

.explain{
  font-size: 24rpx;
  color: gray;
}
.explain view{
  padding: 2rpx;
}
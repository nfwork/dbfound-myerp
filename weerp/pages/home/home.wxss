/* pages/home/home.wxss */

.home{
  font-size: 24rpx;
}

.menu-title{
  font-size: 26rpx;
  color: gray;
  margin: 20rpx;
  padding: 6rpx;
  border-bottom: 1px solid rgb(233, 228, 228);
}

.summary{
  margin: 30rpx;
  height: 200rpx;
  font-size: 28rpx;
}

.summary-item{
  float: left;
  margin-top: 30rpx;
  margin-right: 20rpx;
  width: 320rpx;
}

.money-big{
  font-size: 40rpx;
  display: inline;
  color: red;
}

.money-small{
  display: inline;
  font-size: 28rpx;
  color: red;
}

.function{
  font-size: 26rpx;
  margin: 20rpx;
  width: 710rpx;
  display: flex;
}

.function-item{
  height: 156rpx;
  width: 176rpx;
  text-align: center;
  float: left;
  padding-top: 20rpx;
}

.function-item-hover{
  background-color: #efefef;
}

.function-item image{
  width: 110rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
  border-radius: 50rpx;
}
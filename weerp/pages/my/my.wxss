/* pages/my/my.wxss */
.root .box{
  justify-content: center;
}

.logo{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 80rpx;
}

.title{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  text-align: center;
  font-size: 32rpx;
}

.content{
  width: 360rpx;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  text-align: center;
  padding: 4rpx;
  padding-left: 10rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #ccc; 
}

.function{
  color:#0f4ea0;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.function view{
  padding: 6rpx;
  width: 160rpx;
  text-align: center;
}

input{
  flex: 1;
  margin-top: 5rpx;
  float: left;
}

.popup-box{
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(53, 47, 47, 0.3);
  width: 100%;
  height: 100%;
}
.info-center{
  position: fixed;
  z-index: 999;
  background-color: white;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  width: 90%;
  margin-top: 10%;
  margin-left: 5%;
  margin-right: 5%;
}

.info-header{
  text-align: center;
  color: rgb(10, 114, 161);
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom: 2rpx solid #e2e2e2; 
  margin-bottom: 20rpx;
}
.info-footer{
  height: 100rpx;
  text-align: center;
  border-top: 2rpx solid #e2e2e2; 
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
}

.info-footer button{
  margin: 8rpx 0rpx;
}

.row-info{
  padding: 0 30rpx;
}

.row-info .box{
  height: 90rpx;
}

.row-info .title{
  width:200rpx;
  text-align: right;
}

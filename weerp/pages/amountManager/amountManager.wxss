/* pages/amountManager/amountManager.wxss */
.box button{
  margin: 12rpx 4rpx;
  font-weight: normal;
  width: 90rpx;
}
.title{
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  float: left;
  text-align: right;
}
input{
  flex: 1;
  margin-top: 5rpx;
  float: left;
}
select{
  flex: 1;
}

.table-body{
  overflow: scroll;
  float: left;
}


.popup-box{
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(53, 47, 47, 0.3);
  width: 100%;
  height: 100%;
}
.info-center{
  position: fixed;
  z-index: 999;
  background-color: white;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  width: 90%;
  margin-top: 10%;
  margin-left: 5%;
  margin-right: 5%;
}

.info-header{
  text-align: center;
  color: rgb(10, 114, 161);
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-bottom: 2rpx solid #e2e2e2; 
  margin-bottom: 20rpx;
}
.info-footer{
  height: 100rpx;
  text-align: center;
  border-top: 2rpx solid #e2e2e2; 
  width: 100%;
  display: flex;
  justify-content: center;
  align-content: center;
}

.info-footer button{
  margin: 8rpx 0rpx;
}

.row-info{
  padding: 0 30rpx;
  height: 530rpx;
}

.row-info .box{
  height: 80rpx;
}

.row-info .title{
  width:180rpx;
  text-align: right;
}

textarea{
  flex: 1;
  height: 150rpx;
  margin-top: 5rpx;
}

radio-group{
  flex: 1;
  margin-top: 14rpx;
}

radio .wx-radio-input {
  border-radius: 50%; /* 圆角 */
  width: 28rpx;
  border: 2rpx solid #5e5e5f;
  height: 28rpx;
}